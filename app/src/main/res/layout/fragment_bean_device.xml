<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="120sp" />

    <ToggleButton android:id="@+id/btn_advertising"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/txt_firmware_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0.0" />

            <TextView
                android:id="@+id/txt_hardware_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0.0" />

            <TextView
                android:id="@+id/txt_software_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0.0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <colorpicker.ColorPicker android:id="@+id/widget_color_picker"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>